###################################################################
# 	public crossplatform Makefile defines 
##################################################################

TARGET_PRODUCT		= minigcc

PLATFORM=pclinux

ifndef PLATFORM
$(error Undefined PLATFORM environment variable.please export PLATFORM=pclinux  or export PLATFORM=sigma865x)
endif

#TOOLCHAIN			= 3.4.1

ifeq ($(PLATFORM), pclinux)
EXPORTDIR			= /opt/broch/sdk/pclinux

CROSS               =
G_CFLAGS        	= -m32 -g -O2
G_LDFLAGS       	= -m32 -lc -lm  -ldl
ALLDEFINES      	= -DPLATFORM_PCLINUX
endif


#global variables as following 
PWD  = $(shell pwd )
CC 				= $(CROSS)gcc
GCC 			= $(CROSS)gcc
CXX 			= $(CROSS)g++
AR 				= $(CROSS)ar rc
RANLIB			= $(CROSS)ranlib
STRIP			= $(CROSS)strip
CP				= /bin/cp -afv
RM				= /bin/rm -rf

#ALLWARNING		= -Wundef -Wall -Wchar-subscripts -Wsign-compare -Wuninitialized 
#ALLWARNING		+= -Werror
G_CFLAGS		+= $(ALLDEFINES)

CXXFLAGS		= $(G_CFLAGS) $(ALLWARNING) -fpermissive
CCFLAGS			= $(G_CFLAGS) $(ALLWARNING) -Wmissing-declarations -Wnested-externs -Wmissing-prototypes
LDFLAGS			= $(G_LDLAGS)
